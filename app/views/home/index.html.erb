
<h1>Dashboard</h1>
<div class="assignments" style="border: 1px solid black; height: 15rem; width: 100%; overflow: hidden; overflow-y: scroll">
    <%= link_to "Add New Assignment", new_assignment_path %><br>
    <% @assignments.each do |assignment| %>
        <%= link_to assignment.title, assignment_path(assignment) %> <br>
        <%= assignment.due_date%>)<br>
        <%= assignment.todo %>
        <br>
    <% end %>
</div>

<div class="posts" style="border: 1px solid black; height: 15rem; width: 100%; overflow: hidden; overflow-y: scroll">
    <%= link_to "Create New Post", new_user_post_path(current_user) %> <br> <br>
    <% @posts.each do |post| %>
        <%= link_to post.title, user_post_path(current_user, post) %>
        <br>
    <% end %>
</div>

