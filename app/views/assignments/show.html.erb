<div class="row workspace">
    <%= link_to edit_user_assignment_path do %>
    <button type="button" class="btn btn-primary">
    Edit
    </button>
    <% end %>

    <%= link_to user_assignment_path(current_user, @assignment), method: :delete  do %>
    <button type="button" class="btn btn-danger">
    Delete
    </button>
    <% end %>
    <br>

    <%= link_to "Back", :back %>
<style>

</style>

<div class="container-fluid center">
  <table style="float:center" class="table table-hover table-bordered text-center">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Due Date</th>
        <th scope="col">Image</th>
        <th scope="col">File</th>
     </tr>
    </thead>

    <tbody>
     <tr>
       <td>
         <h1 class="card-title"><%= @assignment.title %></h1>
        <br>
       </td>
  

  
      <td>
       <%= @assignment.todo %>
      <br><br>
      </td>
  

  
      <td>
        <%= @assignment.due_date %>
         <br>
      </td>
  

  
      <td>
        <% if @assignment.image.attached? %>
        <%= image_tag(@assignment.image, width: '200') %>
        <% end %> <br>
      </td>

      <td>
        <% if @assignment.file.attached? %>
        <%= link_to "Download File", @assignment.file, download: '' %>
        <% end %>
      </td>
  
    </tr>
    </tbody>
  </table>
  </div>    


