<%= form_with(model: @assignment, url: assignments_path) do |form| %>
    <label> Title</label><br>
    <%= form.text_field :title %> <br>
    <label>Due date</label><br>
    <%= form.date_field :due_date %> <br>
    <label> Description</label><br>
    <%= form.text_field :todo %> <br>

    
    <%= form.submit "Add", {class: "btn btn-success"} %><br><br>

    <%= link_to "Back", :back %>
    <% end %>