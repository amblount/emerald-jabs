<% content_for :title, "Edit Assignment" %>
<div class="text-center">
    <h1 class="edit-title" style="margin: 2rem;">Edit "<%= @assignment.title %>"</h1>
</div>
<%= form_with(model: @assignment, url: assignments_path) do |f| %>
    <div class="form-group new-comment-form" style="width: 65%; margin-left: auto; margin-right: auto">
            <div class="form-group">
                <%= f.label :title %> 
                <%= f.text_field :title, class: "form-control" %> 
            </div>
            <div class="form-group">
                <%= f.label :due_date %> 
                <%= f.date_field :due_date, class: "form-control" %>
            </div>
            <%= f.label :upload_files_below %>
            <div class="input-group mb-3">
                <div class="custom-file">
                    <%= f.file_field :image, class: "form-control-file comment-upload-btn" %>
                    <% if @assignment.image.attached? %>
                        <%= f.label @assignment.image.filename, class: "custom-file-label comment-upload-label" %> 
                    <% else %>
                        <%= f.label :choose_image, class: "custom-file-label comment-upload-label" %>
                    <% end %>
                </div> 
            </div>
            <div class="input-group mb-3">
                <div class="custom-file">
                    <%= f.file_field :file, class: "form-control-file comment-upload-btn" %>
                    <% if @assignment.file.attached? %>
                        <label for="assignment_choose_image" class="custom-file-label comment-upload-label"><%= @assignment.file.filename.to_s %></label>
                    <% else %>
                        <%= f.label :choose_document, class: "custom-file-label comment-upload-label" %>
                    <% end %>
                </div> 
            </div>
            <%= f.hidden_field :user_id, :value => current_user.id %>
            <%= f.submit "Update Assignment", class: "btn btn-primary comment-submit-btn" %>
        </div>
<% end %>
 <%= link_to "Back", :back %>