<h1>Create New Forum Post</h1>
<%= form_with(model: @post, local: true, url: user_posts_path(current_user), method: :post) do |f| %>
    <%= f.label :title %> <br>
    <%= f.text_field :title %> <br><br>
    <%= f.label :content %> <br>
    <%= f.text_area :content %> <br><br>
    <div class="image-upload">
      <label for="img_input">
      <span class="far fa-images">
      </span> Upload Image</label>
      <%= f.file_field :image, id: "img_input" %><br>
    </div><br>
    <%= f.submit %>
<% end %>