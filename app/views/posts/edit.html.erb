<% content_for :title, "Edit Post" %>
<div class="text-center">
    <h1 class="card-title" style="margin: 2rem;">Edit Post</h1>
</div>
    <%= form_with model: @post, url: user_post_path(@user, @post), method: :patch do |f| %>
        <div class="form-group new-comment-form" style="width: 65%; margin-left: auto; margin-right: auto">
            <div class="form-group">
                <%= f.label :title %> 
                <%= f.text_field :title, class: "form-control" %> 
            </div>
            <div class="form-group">
                <%= f.label :content %> 
                <%= f.text_area :content, class: "form-control", rows: "3" %>
                <small id="emailHelp" class="form-text text-muted">Say Something Nice ðŸ˜‰</small>
            </div>
            <div class="input-group mb-3">
                <div class="custom-file">
                <%= f.file_field :image, class: "form-control-file upload-btn" %>
                <% if @post.image.attached? %>
                    <label for="post_choose_image" class="custom-file-label upload-label"><%= @post.image.filename.to_s %></label>
                <% else %>
                    <%= f.label :choose_image, class: "custom-file-label upload-label" %> 
                <% end %>
                </div> 
            </div>
            <%= f.hidden_field :user_id, :value => current_user.id %>
            <%= f.submit "Update Post", class: "btn btn-primary comment-submit-btn" %>
        </div>
    <% end %>

<div class="text-center">
    <%= link_to :back do %>
        <button type="button" class="btn btn-success text-white mt-4 mb-3 back-btn">
            Back
        </button>
    <% end %>
</div>