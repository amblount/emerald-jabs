<%= form_with model: @comment, url: post_comments_path(@post), method: :post do |f| %>
    <div class="form-group new-comment-form">
        <div class="form-group">
            <%= f.label :title %> 
            <%= f.text_field :title, class: "form-control" %> 
        </div>
        <div class="form-group">
            <%= f.label :content %> 
            <%= f.text_area :content, class: "form-control", rows: "3" %>
            <small id="emailHelp" class="form-text text-muted">Say Something Nice ðŸ˜‰</small>
        </div>
        <div class="input-group mb-3">
            <div class="custom-file">
                <%= f.file_field :image, class: "form-control-file upload-btn" %>
                <%= f.label :choose_image, class: "custom-file-label upload-label" %> 
            </div> 
        </div>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <%= f.submit "Create Comment", class: "btn btn-primary comment-submit-btn" %>
    </div>
<% end %>
